     <component id="ID_s2_title">
        <text><![CDATA[<b>Administrative Command Line Tools</b>]]></text> 
    </component>

     <component id="ID_s2_table">
        <text><![CDATA[
        <table header='none' bordercolor='#FFFFFF' borderwidth='3' shadow='false' shadowcolor='#000000' glow='true' glowcolor='#808080' cellpadding='4'>
            <tr class="mtable_title">
                <td colspan="2" bgcolor='#FFFFFF'><font size="16"></font></td>
            </tr>
            <tr class="mtable_top">
                <td  colspan="2" bgcolor='#4E4C4D'><font size='1' color='#4E4C4D'>.</font></td>
            </tr>
			
             <tr>
                <td bgcolor='#666263' width='200'><font color='#F2F2F2'><b>Command</b></font></td>
                <td bgcolor='#666263'><font color='#F2F2F2'><b>Description</b></font></td>
             </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>mv</b></font></td>
                <td bgcolor='#E9E7E8'>Moves or renames files and directories</td>
            </tr>
            <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>chmod</b></font></td>
                <td bgcolor='#F2F2F2'>Modifies file permissions</td>
            </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>chown</b></font></td>
                <td bgcolor='#E9E7E8'>Changes the ownership of a file</td>   
            </tr>

            <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>dd</b></font></td>
                <td bgcolor='#F2F2F2'>Copies data from an input to an output</td>
            </tr>
			
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>shutdown</b></font></td>
                <td bgcolor='#E9E7E8'>Shuts down the system</td>   
            </tr>

            <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>pwd</b></font></td>
                <td bgcolor='#F2F2F2'>Displays the name of the current directory</td>
            </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>passwd</b></font></td>
                <td bgcolor='#E9E7E8'>Changes user password</td>   
            </tr>

            <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>ps</b></font></td>
                <td bgcolor='#F2F2F2'>Lists the process currently running in the system</td>
            </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>su</b></font></td>
                <td bgcolor='#E9E7E8'>Simulates a login as another user or to become a super-user</td>   
            </tr>

             <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>sudo</b></font></td>
                <td bgcolor='#F2F2F2'>Runs command as another user</td>
            </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>ifconfig</b></font></td>
                <td bgcolor='#E9E7E8'>Displays or configures network card related information</td>   
            </tr>

             <tr>
                <td bgcolor='#F2F2F2'><font face='_typewriter'><b>apt-get</b></font><br/>(not available on OS X, by default)</td>
                <td bgcolor='#F2F2F2'>Is the Ubuntu Linux package manager and is used to install, configure and remove packages on Ubuntu</td>
            </tr>
            <tr>
                <td bgcolor='#E9E7E8'><font face='_typewriter'><b>iwconfig</b></font><br/>(not available on OS X, by default)</td>
                <td bgcolor='#E9E7E8'>Displays or configures wireless network card related information</td>   
            </tr>

        </table>]]></text>
    </component>
</textcomponents>